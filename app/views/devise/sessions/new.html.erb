<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <h2 class="title is-2">Log in</h2>
        <div class="block">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email,
                                autofocus: true,
                                required: true,
                                placeholder: "user@example.com",
                                class: "input" %>
            </div>

            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password,
                                  placeholder: "password",
                                  required: true,
                                  class: "input" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class:"button btn-primary is-link is-fullwidth" %>
              <i class="fab fa-facebook"></i>
              <%= link_to "Log In with Facebook", user_facebook_omniauth_authorize_path %>
            </div>
          <% end %>
        </div>
        <div class="block">
          <p>
            <span class="icon">
              <i class="fa fa-sign-in has-text-danger" aria-hidden="true"></i>
            </span>
            <strong class="has-text-danger">Tip:</strong> Log in by using the placeholder information
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
