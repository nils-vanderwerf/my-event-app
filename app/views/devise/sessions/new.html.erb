<section class="section">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <div class="column is-6">
        <h2 class="title is-2">Log in</h2>
        <div class="block">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email,
                                autofocus: true,
                                required: true,
                                placeholder: "user@example.com",
                                class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password,
                                  placeholder: "password",
                                  required: true,
                                  class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class:"button btn-primary btn-rounded pt-1 pb-1 btn-block my-3 py-2 login" %>
              <i class="fas fa-user-circle"></i>
              <%= link_to 'Create an account', new_user_registration_path, class: 'nav-link inline-link' %><br>
              <i class="fab fa-facebook inline-link"></i>
              <%= link_to "Log In with Facebook", user_facebook_omniauth_authorize_path, class: 'nav-link inline-link' %>

              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
        <div class="block">
          <p>
          <p class="small">
            <span class="icon">
              <i class="fa fa-sign-in has-text-danger" aria-hidden="true"></i>
            </span>
            <strong class="has-text-danger">Tip:</strong> Log in by using the placeholder information</p>
          </p>
        </div>
      </div>
    </div>
</section>
