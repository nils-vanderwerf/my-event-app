 <h1 class="mb-4"><%= @user.name %></h1>
  <p><strong>Email: <%= @user.email %></strong></p>
 <div class="row d-flex">
    <div class="col mb-4">
        <p class="text-muted"> <%= pluralize(@user.hosted_events.count, 'event').upcase %> EVENTS HOSTED</p>
        <div class="list-group mt-3">
            <% @user.hosted_events.each do |event| %>
            <%= link_to event.name, event_path(event), class: "list-group-item list-group-item-action" %>
            <% end %>
        </div>
    </div>

    <div class="col mb-4 text-right">
        <p class="text-muted"> <%= pluralize(@user.events.count, 'event').upcase %> ATTENDED</p>
        <div class="list-group mt-3">
            <% @user.events.each do |event| %>
                <%= link_to event.name, event_path(event), class: "list-group-item list-group-item-action" %>
            <% end %>
        </div>
 </div>
