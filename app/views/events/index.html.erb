<h1>Welcome, <%= current_user.present? ? current_user[:name] : 'Stranger' %> </h1>

<div class="row-today">
    <% if !Event.today.empty? %>
    <h2>HAPPENING TODAY</h2>
        <div class="row card-wrapper mb-5">
            <% Event.today.each do |event| %>
                <%= render partial: 'event_card', :locals => { event: event } %>
            <% end %>
        </div>
    <% end %>
</div>

<div class="row-upcoming">
    <% if !Event.future.empty? %>
        <h2>UPCOMING EVENTS</h2>
        <div class="row card-wrapper mb-5">
            <% Event.future.each do |event| %>
                <%= render partial: 'event_card', :locals => { event: event} %>
            <% end %>
        </div>
    <% end %>
</div>

<div class="row-past">
    <% if !Event.past.empty? %>
        <h2>PAST EVENTS</h2>
        <div class="row card-wrapper mb-5">
        <% Event.past.each do |event| %>
            <%= render partial: 'event_card', :locals => { event: event} %>
        <% end %>
        </div>
    <% end %>
</div>