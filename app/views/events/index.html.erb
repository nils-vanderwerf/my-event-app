<h1>Welcome, <%= current_user.present? ? current_user[:name] : 'Stranger' %> </h1>
<% @events.each do |event| %>
    <div class="row card-wrapper mb-4">
            <div class="card col">
                <div class="card-body">
                <h3 class="card-title"><h3><%= event.name.titleize %></h3>

                <p class="event-date"><%= event.start_date.strftime("%b %-d, %Y")%> </p>
                <p class="event-date"><%= event.start_time.strftime(" at %l:%M %P")%></p>
                <%= link_to 'Learn More', event_path(id: event.id), class: "btn btn-outline-primary btn-block" %>
                </div>
            
     </div>
<% end %>
</div>