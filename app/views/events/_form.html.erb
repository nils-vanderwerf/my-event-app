
<%= form_with model: @event, local: true do |form| %>
    <%# DISPLAY ANY ERRORS HERE %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2 class="has-text-danger"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul class="has-text-danger">
        <% @event.errors.each do |error| %>
          <li>
            <span class="icon">
              <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
            </span>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <div class="field mb-3">
    <%= form.label :name %><br />
    <%= form.text_field :name,
                      autofocus: true,
                      required: true,
                      placeholder: "Dave's BBQ",
                      class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :description %><br />
    <%= form.text_area :description,
                    placeholder: "Description about the event",
                    class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :location %><br />
    <%= form.text_area :location,
                      placeholder: "My house, The park, etc.",
                      required: true,
                      class: "form-control" %>
  </div>

  <div class="field form-date-time">
    <%= form.label "Start Date" %><br />
    <%= form.date_field :start_date,
                      required: true,
                      placeholder: "dd/mm/yyyy",
                      class: "form-control" %>
  </div>

  <div class="field form-date-time">
    <%= form.label "Start Time" %><br />
    <%= form.time_field :start_time,
                      required: true,
                      placeholder: "24:00",
                      class: "datepicker form-control" %>
  </div>


  <div class="field form-date-time">
      <%= form.label "End Date" %><br />
      <%= form.date_field :end_date,
                       required: true,
                       placeholder: "dd/mm/yyyy",
                       class: "datepicker form-control" %>
  </div>

  <div class="field form-date-time">
      <%= form.label "End Time" %><br />
      <%= form.time_field :end_time,
                       required: true,
                       placeholder: "24:00",
                       class: "form-control" %>
   </div>

  <div class="actions">
    <%= form.submit class:"button btn-primary btn-rounded pt-1 pb-1 btn-block my-3 py-2 sign-up" %>
  </div>

<% end %>